<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".writeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/recipeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="레시피 이름을 입력하세요."
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/recipeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="레시피 설명을 입력하세요."
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/recipeIngredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="레시피 재료를 입력하세요."
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#D6D6D6"
                android:text="레시피 과정"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/stepLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 1 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/stepContentEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/stepImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 2 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 3 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 4 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 5 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="레시피 완성 사진을 추가해주세요."
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/resultImage"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>