<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".writeActivity">


    <include
        layout="@layout/toolbat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000000"
                android:id="@+id/categoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="카테고리"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="제목"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/recipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:hint="레시피 제목을 입력하세요."
                android:padding="10dp"
                android:textSize="20sp" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="설명"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/writeCommentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="레시피 설명을 입력하세요."
                android:padding="10dp"
                android:textSize="20sp" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="재료"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/recipeIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="레시피 재료를 입력하세요."
                android:padding="10dp"
                android:textSize="20sp" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="예상 비용"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/recipeCostEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="숫자를 입력해주세요."
                    android:paddingRight="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/categoryTextView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:textColor="#000000"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="과정"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/stepLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 1 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/stepContentEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/stepImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 2 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 3 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 4 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 5 "
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/recipe_step5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:hint="과정"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageView

                            android:id="@+id/recipe_image5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/write_circle" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:textColor="#000000"
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:padding="10dp"
                android:text="완성 사진"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/resultImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/noimge"
                tools:srcCompat="@drawable/noimge" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>
</LinearLayout>
